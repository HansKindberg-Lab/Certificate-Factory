@model AsymmetricAlgorithmsViewModel
<div class="card">
	<div class="card-header">
		<h1 class="h4 m-0 p-0">Asymmetric algorithms</h1>
	</div>
	<div class="card-body">
		@if(Model.Dictionary.Any())
		{
			<ul class="list-group">
				@foreach(var item in Model.Dictionary)
				{
					<li class="list-group-item">
						<strong>@item.Key:</strong> @item.Value.Text
					</li>
				}
			</ul>
		}
		else
		{
			<div class="alert alert-warning">
				<i>There are no asymmetric algorithms.</i>
			</div>
		}
	</div>
</div>