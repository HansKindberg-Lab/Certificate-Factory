@model Modal
<div aria-hidden="true" class="modal fade" id="modal" role="dialog" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content border-success border-5">
			<div class="modal-body text-center">
				<div class="spinner-border text-info mb-5 mt-5" role="status">
					@if(!string.IsNullOrWhiteSpace(Model.Text))
					{
						<span class="visually-hidden">@Model.Text</span>
					}
				</div>
				@if(!string.IsNullOrWhiteSpace(Model.Text))
				{
					<p class="alert alert-info">@Model.Text</p>
				}
			</div>
		</div>
	</div>
</div>